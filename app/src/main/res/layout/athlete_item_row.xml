<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="0dp">

            <ImageView
                android:id="@+id/img_self_photo"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:src="@drawable/icons8_user_male_480"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Name"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@+id/img_self_photo"/>

            <TextView
                android:id="@+id/tv_item_polytechnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Politeknik"
                android:textSize="11sp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_below="@id/tv_item_name"
                android:layout_toRightOf="@id/img_self_photo"/>

            <TextView
                android:id="@+id/tv_item_nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nim"
                android:textSize="11sp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_below="@id/tv_item_polytechnic"
                android:layout_toRightOf="@id/img_self_photo"/>

            <TextView
                android:id="@+id/tv_item_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="11sp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_below="@id/tv_item_nim"
                android:layout_toRightOf="@id/img_self_photo"/>

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="11sp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_below="@id/tv_item_gender"
                android:layout_toRightOf="@id/img_self_photo"/>

            <LinearLayout
                android:id="@+id/ll_competition_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/img_self_photo"
                android:layout_below="@id/tv_item_date"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="Nomor Pertandingan 1"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="Nomor Pertandingan 2"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_self_photo"
                android:layout_below="@id/ll_competition_number"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_competition_number_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="Nomor 1"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_competition_number_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="Nomor 2"
                    android:layout_weight="1"/>

                <!--<Button-->
                <!--android:id="@+id/btn_set_favorite"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="11sp"-->
